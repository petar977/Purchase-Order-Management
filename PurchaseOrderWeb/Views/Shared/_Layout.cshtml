<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PurchaseOrderWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PurchaseOrderWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css"/>
    <link href="https://cdn.datatables.net/2.0.3/css/dataTables.dataTables.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"/>
    @* <link rel="stylesheet" href="https://cdn.datatables.net/2.0.3/css/dataTables.bootstrap5.css"/> *@
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
      
</head>
<body>
    <header class="container">
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand link-light link-opacity-75-hover" href="/PurchaseOrder/Index">Purchase Order Management</a>
                <a class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </a>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        @if (User.IsInRole(Roles.Role_Admin) || User.IsInRole(Roles.Role_User))
                        {
                            <li class="nav-item">
                                <a class="nav-link link-light link-opacity-75-hover" asp-controller="PurchaseOrder" asp-action="Index">
                                    Purchase Order
                                    <span class="visually-hidden">(current)</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link link-light link-opacity-75-hover" asp-controller="Items" asp-action="Index">
                                    Items
                                    <span class="visually-hidden">(current)</span>
                                </a>
                            </li>
                        }                   
                        @if (User.IsInRole(Roles.Role_Admin))
                        {
                            <li class="dropdown">
                                <a class="nav-link dropdown-toggle link-light link-opacity-75-hover" data-bs-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Management</a>
                                <div class="dropdown-menu dropdown-menu-dark">
                                    <a class="dropdown-item" asp-controller="UsersManagement" asp-action="Index">
                                        User
                                        <span class="visually-hidden">(current)</span>
                                    </a>
                                    <a class="dropdown-item" asp-controller="Company" asp-action="Index">
                                        Companies
                                        <span class="visually-hidden">(current)</span>
                                    </a>
                                    <a class="dropdown-item" asp-controller="OrderCount" asp-action="Index">
                                        Counters
                                        <span class="visually-hidden">(current)</span>
                                    </a>
                                </div>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="_Notification" />
            <div class="card mt-4 mb-5">
            @RenderBody()
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted bg-primary">
        <div class="container text-light text-center">
            &copy; 2024 - Powered By 2i Global Software Solutions
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.datatables.net/2.0.3/js/dataTables.js"></script>
    @* <script src="https://cdn.datatables.net/2.0.3/js/dataTables.bootstrap5.js"></script> *@
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
